= simple_form_for @event do |f|
  = f.input :title, error: 'Title is necessary, please enter one'
  = f.input :description
  = f.input :location
  = f.input :organizertelegram
  = f.input :organizeremail
  = f.input :starttime
  = f.input :endtime
  = f.button :submit
  = link_to "Cancel", events_path, {:class=>"btn btn-default"}
