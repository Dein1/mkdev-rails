= simple_form_for @event do |f|
  = f.input :title, error: 'Title is necessary, please enter one'
  = f.input :description
  = f.input :location
  = f.input :organizer_telegram
  = f.input :organizer_email
  = f.input :start_time
  = f.input :end_time
  = f.button :submit
  = link_to "Cancel", events_path, {:class=>"btn btn-default"}
