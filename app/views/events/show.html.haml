.container
  %h1= @event.title
  %h4= @event.location
  #desc= @event.description
  %br
  %blockquote= "Email: #{@event.organizer_email}"
  %blockquote= "Telegram: #{@event.organizer_telegram}"
  %div
    %samp= @event.start_time.strftime("%d/%m/%Y - %H:%M")
  %div
    %samp= @event.end_time.strftime("%d/%m/%Y - %H:%M")

  %br
  = link_to "Back", events_path, {:class=>"btn btn-light"}