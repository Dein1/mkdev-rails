.text-center.jumbotron
  %h1= t(:events)
%br
.container
  %ul.list-group
    - @events.each do |event|
      %li.list-group-item.d-flex.justify-content-between.align-items-center
        .d-flex.flex-column
          = event.title
          .small= event.description
        .btn-group
          = link_to t(:view), event_path(event), class: "btn btn-outline-primary"
          = link_to t(:edit), edit_event_path(event), class: "btn btn-outline-primary"
          = link_to t(:delete), event_path(event), class: "btn btn-outline-danger", method: :delete, data: { confirm: t(:delete_confirm) }
    %br
    = paginate @events
  %br
  %a.btn.btn-primary{ href: new_event_path() }= t(:new_event)
  